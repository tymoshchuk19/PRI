extends layout

block content
    .w3-container
        .w3-card-4  
            header.w3-container.w3-teal
                h3 Identificador: #{id}
            .w3-container
                form.w3-container(action='/alunos' method='POST')
                .w3-container
                table.w3-table-all
                    tr
                        th Nome
                        td #{nome}
                    tr
                        th Curso
                        td #{curso}
                    tr
                        table.w3-table-all
                            tr
                                th Indicador
                                th Nota
                            each nota in notas
                                tr
                                    td= nota.indicador
                                    td= nota.nota
                                    td
                                        button.w3-button.w3-blue-grey(onclick="removerNota('"+id+"/notas/"+nota.indicador+"')") Remover
                                                    
            footer.w3-container.w3-teal 
                adress Gerado por notas da turma: jrc-2019
    .w3-container
        .w3-card-4  
            header.w3-container.w3-teal
                h3 Inserir nota:
            .w3-container
                form.w3-container(action='/alunos/' + id + '/notas' method='POST')
                    label.w3-teal
                        b Indicador
                    input.w3-input.w3-border.w3-light-grey(type='text' name='indicador')
                    label.w3-teal
                        b Nota
                    input.w3-input.w3-border.w3-light-grey(type='text' name='nota')
                    input.w3-btn.w3-blue-grey(type='submit' value='Enviar')
                button.w3-button.w3-blue-grey.w3-right(onclick="voltar()") Voltar
            footer.w3-container.w3-teal 
                adress Gerado por notas da turma: jrc-2019
